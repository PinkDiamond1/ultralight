{
	"name": "ultralight",
	"private":true,
	"workspaces": [
		"./packages/*"
	],
	"engines": {
		"npm": ">=7"
	},
	"scripts": {    
		"preinstall": "npm run checkNpmVersion",
		"checkNpmVersion": "./scripts/check-npm-version.sh",
		"postinstall": "npm run build --workspaces --if-present",
		"start-proxy": "npm run proxy -w=proxy",
		"start-browser-client": "npm run start -w=browser-client",
		"clean": "rm -rf node_modules && npm run clean --workspaces --if-present"
	}
}